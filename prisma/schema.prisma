// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id    String @id @default(uuid())
  login String @map("nick_name")
  hash  String @map("password_hash")
}

model MonoUnknownEvent {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")
  event     Json
}

model MonoRootEvent {
  id     String            @id @default(uuid())
  data   MonoRootData?
  type   MonoEventTypeEnum
  fromIp String?
}

model MonoRootData {
  id              String             @id @default(uuid())
  account         String
  monoRootEvent   MonoRootEvent      @relation(fields: [monoRootEventId], references: [id])
  monoRootEventId String             @unique
  statementItem   MonoStatementItem?
}

model MonoStatementItem {
  id              String       @id @unique // monobank gives theirs id
  mcc             Int
  hold            Boolean
  time            Int
  amount          Int
  balance         Int
  receiptId       String
  description     String
  originalMcc     Int
  currencyCode    Int
  cashbackAmount  Int
  commissionRate  Int
  operationAmount Int
  monoRootData    MonoRootData @relation(fields: [monoRootDataId], references: [id])
  monoRootDataId  String       @unique
}

enum MonoEventTypeEnum {
  StatementItem
}
